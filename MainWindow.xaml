<Window x:Class="MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProfitabilityAnalysis"
        xmlns:lvc="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf"
        mc:Ignorable="d"
        Title="Profitabil-inatorul" Height="720" Width="1280"
        MinWidth="1280" MinHeight="720">


    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="CustomStyles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>
    
    <DockPanel>
        <!-- Sidebar for navigation buttons -->
        <DockPanel DockPanel.Dock="Left" Background="Gray" Width="200" MinWidth="200">
            <Button Height="50" Margin="40,20,40,30" DockPanel.Dock="Bottom">HELP</Button>
            <StackPanel>
                <Button Height="50" Margin="40,40,40,0" Click="DashboardButton_Click">Dashboard</Button>
                <Button Height="50" Margin="40,40,40,0" Click="PreviewDatabaseButton_Click">Preview Database</Button>
                <Button Height="50" Margin="40,40,40,0" Click="AnalysisButton_Click">Analysis</Button>
                <Button Height="50" Margin="40,40,40,0" Click="InputDataButton_Click">Input Data</Button>
                <Button Height="50" Margin="40,40,40,0" Click="ScenarioAnalysisButton_Click">Scenario Analysis</Button>
            </StackPanel>
        </DockPanel>

        <!-- Main content area with hidden TabControl headers -->
        <DockPanel>
            <TabControl Name="MainTabControl" BorderThickness="0" DockPanel.Dock="Top">
                <TabControl.Template>
                    <ControlTemplate TargetType="TabControl">
                        <Grid>
                            <ContentPresenter ContentSource="SelectedContent"/>
                        </Grid>
                    </ControlTemplate>
                </TabControl.Template>
                <!-- Dashboard Tab -->
                <TabItem Header="Dashboard" Name="DashboardTab">
                    <Grid Background="White">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>

                        <!-- Placeholder for Chart 1 -->
                        <lvc:CartesianChart Grid.Row="0" Grid.Column="0" Name="chart1" Visibility="Collapsed" />
                        <Grid Grid.Row="0" Grid.Column="0" Name="placeholder1">
                            <Rectangle Fill="LightGray" RadiusX="10" RadiusY="10" Margin="10"/>
                            <TextBlock Text="Data is not loaded" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="DarkGray" />
                        </Grid>

                        <!-- Placeholder for Chart 2 -->
                        <lvc:CartesianChart Grid.Row="0" Grid.Column="1" Name="chart2" Visibility="Collapsed" />
                        <Grid Grid.Row="0" Grid.Column="1" Name="placeholder2">
                            <Rectangle Fill="LightGray" RadiusX="10" RadiusY="10" Margin="10"/>
                            <TextBlock Text="Data is not loaded" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="DarkGray" />
                        </Grid>

                        <!-- Placeholder for Chart 3 -->
                        <lvc:CartesianChart Grid.Row="1" Grid.Column="0" Name="chart3" Visibility="Collapsed" />
                        <Grid Grid.Row="1" Grid.Column="0" Name="placeholder3">
                            <Rectangle Fill="LightGray" RadiusX="10" RadiusY="10" Margin="10"/>
                            <TextBlock Text="Data is not loaded" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="DarkGray" />
                        </Grid>

                        <!-- Placeholder for Chart 4 -->
                        <lvc:CartesianChart Grid.Row="1" Grid.Column="1" Name="chart4" Visibility="Collapsed" />
                        <Grid Grid.Row="1" Grid.Column="1" Name="placeholder4">
                            <Rectangle Fill="LightGray" RadiusX="10" RadiusY="10" Margin="10"/>
                            <TextBlock Text="Data is not loaded" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="DarkGray" />
                        </Grid>
                    </Grid>
                </TabItem>


                <!-- Preview Database Tab -->
                <!-- Add an edit database button, specify the ID you want to edit, etc-->
                <!-- Or maybe do not edit the database at all? just delete the row and enter it again but correctly? dumbass?-->
                <!-- TO DO: Date Range(Start, End), Value Ranges(Min,Max), Record Count(Total number), Most Recent Entry, Oldest date Entry(also called first entry? why would I add this? am I going insane?), Maybe a standard deviation for each column?-->
                <TabItem Header="Preview Database" Name="PreviewDatabaseTab">
                    <Grid Background="Green">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*" />
                            <!-- Takes up all available space -->
                        </Grid.RowDefinitions>

                        <DockPanel>
                            <!-- Customized DataGrid -->
                            <DataGrid Name="FinancialDataGrid" AutoGenerateColumns="False" HeadersVisibility="Column"
                      CanUserAddRows="False" CanUserDeleteRows="False" IsReadOnly="True"
                      RowHeaderWidth="0" GridLinesVisibility="None" DockPanel.Dock="Top">
                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="ID" Binding="{Binding FinancialDataID}" Width="50" />
                                    <DataGridTextColumn Header="Date" Binding="{Binding DateValue, StringFormat=d}" Width="100" />
                                    <DataGridTextColumn Header="Revenue" Binding="{Binding Revenue, StringFormat=C}" Width="100" />
                                    <DataGridTextColumn Header="Cost of Goods Sold" Binding="{Binding CostOfGoodsSold, StringFormat=C}" Width="150" />
                                    <DataGridTextColumn Header="Operating Expenses" Binding="{Binding OperatingExpenses, StringFormat=C}" Width="150" />
                                    <DataGridTextColumn Header="Net Income" Binding="{Binding NetIncome, StringFormat=C}" Width="100" />
                                    <DataGridTextColumn Header="Total Assets" Binding="{Binding TotalAssets, StringFormat=C}" Width="100" />
                                    <DataGridTextColumn Header="Total Equity" Binding="{Binding TotalEquity, StringFormat=C}" Width="150" />
                                    <DataGridTextColumn Header="EBITDA" Binding="{Binding EBITDA, StringFormat=C}" Width="100" />
                                    <DataGridTextColumn Header="Current Assets" Binding="{Binding CurrentAssets, StringFormat=C}" Width="100" />
                                    <DataGridTextColumn Header="Current Liabilities" Binding="{Binding CurrentLiabilities, StringFormat=C}" Width="150" />
                                    <DataGridTextColumn Header="Total Liabilities" Binding="{Binding TotalLiabilities, StringFormat=C}" Width="150" />
                                    <DataGridTextColumn Header="Interest Expense" Binding="{Binding InterestExpense, StringFormat=C}" Width="150" />
                                    <DataGridTextColumn Header="Variable Costs" Binding="{Binding VariableCosts, StringFormat=C}" Width="150" />
                                    <DataGridTextColumn Header="Fixed Costs" Binding="{Binding FixedCosts, StringFormat=C}" Width="150" />
                                    <DataGridTextColumn Header="Sales Revenue Per Unit" Binding="{Binding SalesRevenuePerUnit, StringFormat=C}" Width="150" />
                                    <DataGridTextColumn Header="Variable Cost Per Unit" Binding="{Binding VariableCostPerUnit, StringFormat=C}" Width="150" />
                                    
                                    <!-- Add more columns as needed -->
                                </DataGrid.Columns>

                                <DataGrid.Resources>
                                    <!-- Style for the DataGrid -->
                                    <Style TargetType="DataGrid">
                                        <Setter Property="AlternatingRowBackground" Value="LightGray" />
                                        <Setter Property="RowBackground" Value="White" />
                                        <Setter Property="GridLinesVisibility" Value="Horizontal" />
                                        <Setter Property="HorizontalGridLinesBrush" Value="Gray" />
                                    </Style>

                                    <!-- Style for the DataGrid rows -->
                                    <Style TargetType="DataGridRow">
                                        <Setter Property="FontSize" Value="14" />
                                        <Setter Property="Height" Value="30" />
                                    </Style>

                                    <!-- Style for the DataGrid columns header -->
                                    <Style TargetType="DataGridColumnHeader">
                                        <Setter Property="Background" Value="LightSteelBlue" />
                                        <Setter Property="FontSize" Value="14" />
                                        <Setter Property="FontWeight" Value="Bold" />
                                        <Setter Property="Height" Value="30" />
                                        <Setter Property="HorizontalContentAlignment" Value="Left" />
                                        <Setter Property="Padding" Value="5" />
                                    </Style>
                                </DataGrid.Resources>
                            </DataGrid>

                            <StackPanel DockPanel.Dock="Bottom" Margin="10">
                                <TextBlock Width="600">Specify which transaction IDs you do not want anymore</TextBlock>
                                <TextBox Name="FinancialDataIDInput" Width="600"></TextBox>
                                <Button Content="Delete Financial Data" Click="DeleteDataButton_Click" Width="600"></Button>
                            </StackPanel>
                        </DockPanel>
                    </Grid>
                </TabItem>

                <!-- Preview AnalysisTab -->
                <TabItem Header="AnalysisTab" Name="AnalysisTab">
                    <Grid Background="White">
                        <DockPanel>
                            <!-- Top Section -->
                            <Grid DockPanel.Dock="Top" Margin="10">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>

                                <StackPanel Grid.Column="0" Orientation="Vertical" HorizontalAlignment="Left" VerticalAlignment="Top">
                                    <DatePicker Name="StartDatePicker" BorderThickness="0" Text="Select start date" />
                                    <DatePicker Name="EndDatePicker" Width="120" BorderThickness="0" Text="Select end date" />
                                </StackPanel>

                                <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Top">
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                        </Grid.RowDefinitions>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <CheckBox Grid.Row="0" Grid.Column="0" Content="ROA"/>
                                        <CheckBox Grid.Row="0" Grid.Column="1" Content="ROE"/>
                                        <CheckBox Grid.Row="0" Grid.Column="2" Content="Operating Margin Profit"/>

                                        <CheckBox Grid.Row="1" Grid.Column="0" Content="Gross Profit Margin"/>
                                        <CheckBox Grid.Row="1" Grid.Column="1" Content="Net Profit Margin"/>
                                        <CheckBox Grid.Row="1" Grid.Column="2" Content="Current Ratios"/>

                                        <CheckBox Grid.Row="2" Grid.Column="0" Content="Debt-to-Equity"/>
                                        <CheckBox Grid.Row="2" Grid.Column="1" Content="Interest Coverage"/>
                                        <CheckBox Grid.Row="2" Grid.Column="2" Content="Contribution Margin"/>

                                        <CheckBox Grid.Row="3" Grid.Column="0" Content="Break-Even Point"/>

                                        <StackPanel Grid.Row="0" Grid.Column="3" Margin="50,0,0,0">
                                            <TextBlock>CHART 1</TextBlock>
                                            <!--<lvc:CandleSeries></lvc:CandleSeries>-->
                                        </StackPanel>
                                        <StackPanel Grid.Row="0" Grid.Column="4" Margin="200,0,0,0">
                                            <TextBlock>CHART 2</TextBlock>
                                            <!--<lvc:PieChart></lvc:PieChart>-->
                                        </StackPanel>
                                    </Grid>
                                </StackPanel>
                            </Grid>

                            <!-- Middle Separator -->
                            <Separator DockPanel.Dock="Top" Margin="30,70"/>

                            <!-- Bottom Section -->
                            <Grid DockPanel.Dock="Bottom" Margin="10">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>

                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <StackPanel Grid.Column="0" Orientation="Vertical" HorizontalAlignment="Left" VerticalAlignment="Top">
                                    <DatePicker Name="StartDatePickerBottom" BorderThickness="0" Text="Select start date" />
                                    <DatePicker Name="EndDatePickerBottom" Width="120" BorderThickness="0" Text="Select end date" />
                                </StackPanel>

                                <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Top">
                                    <Grid>
                                        <!-- Define the Grid Rows and Columns -->
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                        </Grid.RowDefinitions>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <!-- Add CheckBoxes to the Grid -->
                                        <CheckBox Grid.Row="0" Grid.Column="0" Content="ROA"/>
                                        <CheckBox Grid.Row="0" Grid.Column="1" Content="ROE"/>
                                        <CheckBox Grid.Row="0" Grid.Column="2" Content="Operating Margin Profit"/>

                                        <CheckBox Grid.Row="1" Grid.Column="0" Content="Gross Profit Margin"/>
                                        <CheckBox Grid.Row="1" Grid.Column="1" Content="Net Profit Margin"/>
                                        <CheckBox Grid.Row="1" Grid.Column="2" Content="Current Ratios"/>

                                        <CheckBox Grid.Row="2" Grid.Column="0" Content="Debt-to-Equity"/>
                                        <CheckBox Grid.Row="2" Grid.Column="1" Content="Interest Coverage"/>
                                        <CheckBox Grid.Row="2" Grid.Column="2" Content="Contribution Margin"/>

                                        <CheckBox Grid.Row="3" Grid.Column="0" Content="Break-Even Point"/>

                                        <StackPanel Grid.Row="0" Grid.Column="3" Margin="20,0,0,0">
                                            <TextBlock>Chart 1</TextBlock>
                                            <!--<lvc:LineSeries></lvc:LineSeries>-->
                                        </StackPanel>

                                        <StackPanel Grid.Row="0" Grid.Column="4" Margin="40,0,0,0">
                                            <TextBlock>Chart 2</TextBlock>
                                            <!--<lvc:PieChart></lvc:PieChart>-->
                                        </StackPanel>
                                    </Grid>
                                </StackPanel>

                                <!-- Add a Grid for Button and ComboBox -->
                                <Grid Grid.Row="4" Grid.Column="0" Margin="10,0,0,0">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <!-- Button -->
                                    <Button Grid.Row="0" Grid.Column="0" Content="Retrieve data" Margin="0,0,0,10" Click="GetAPIdata_Click"/>

                                    <!-- ComboBox -->
                                    <ComboBox Grid.Row="1" Grid.Column="0" Width="200" Height="30" SelectedIndex="0">
                                        <ComboBoxItem Content="Option 1" />
                                        <ComboBoxItem Content="Option 2" />
                                        <ComboBoxItem Content="Option 3" />
                                        <ComboBoxItem Content="Option 4" />
                                    </ComboBox>

                                    <TextBox Name="API_Test" Grid.Row="3" Grid.Column="0" Width="200" Height="300" Margin="0,10,0,0">
                                        
                                    </TextBox>
                                </Grid>
                            </Grid>
                        </DockPanel>
                    </Grid>
                </TabItem>





                <!-- Preview InputDataTab -->
                <TabItem Header="InputData" Name="InputDataTab">
                    <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto">
                        <Grid>
                            <DockPanel>
                                <Grid Margin="10" DockPanel.Dock="Top">
                                    <!-- Define rows and columns -->
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="*" />
                                    </Grid.ColumnDefinitions>

                                    <Grid.RowDefinitions>
                                        <!-- Add more RowDefinitions if needed -->
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="*" />
                                        <!-- This row will take up the remaining space -->
                                    </Grid.RowDefinitions>

                                    <StackPanel Grid.Column="0" Grid.Row="0" HorizontalAlignment="Left">
                                        <TextBlock Width="120" Text="Date"/>
                                        <DatePicker Width="120" Name="DateInput"/>
                                    </StackPanel>

                                    <StackPanel Grid.Column="1" Grid.Row="0" HorizontalAlignment="Left">
                                        <TextBlock Width="120" Text="Revenue"/>
                                        <TextBox Width="120" Name="RevenueInput"/>
                                    </StackPanel>

                                    <StackPanel Grid.Column="2" Grid.Row="0" HorizontalAlignment="Left">
                                        <TextBlock Width="120" Text="Cost of Goods Sold"/>
                                        <TextBox Width="120" Name="CostOfGoodsSoldInput"/>
                                    </StackPanel>

                                    <StackPanel Grid.Column="3" Grid.Row="0" HorizontalAlignment="Left">
                                        <TextBlock Width="120" Text="Operating Expenses"/>
                                        <TextBox Width="120" Name="OperatingExpensesInput"/>
                                    </StackPanel>

                                    <StackPanel Grid.Column="0" Grid.Row="1" HorizontalAlignment="Left">
                                        <TextBlock Width="120" Text="Net Income"/>
                                        <TextBox Width="120" Name="NetIncomeInput"/>
                                    </StackPanel>

                                    <StackPanel Grid.Column="1" Grid.Row="1" HorizontalAlignment="Left">
                                        <TextBlock Width="120" Text="Total Assets"/>
                                        <TextBox Width="120" Name="TotalAssetsInput"/>
                                    </StackPanel>

                                    <StackPanel Grid.Column="2" Grid.Row="1" HorizontalAlignment="Left">
                                        <TextBlock Width="120" Text="Total Equity"/>
                                        <TextBox Width="120" Name="TotalEquityInput"/>
                                    </StackPanel>

                                    <StackPanel Grid.Column="3" Grid.Row="1" HorizontalAlignment="Left">
                                        <TextBlock Width="120" Text="EBITDA"/>
                                        <TextBox Width="120" Name="EBITDAInput"/>
                                    </StackPanel>

                                    <StackPanel Grid.Column="0" Grid.Row="2" HorizontalAlignment="Left">
                                        <TextBlock Width="120" Text="Current Assets"/>
                                        <TextBox Width="120" Name="CurrentAssetsInput"/>
                                    </StackPanel>

                                    <StackPanel Grid.Column="1" Grid.Row="2" HorizontalAlignment="Left">
                                        <TextBlock Width="120" Text="Current Liabilities"/>
                                        <TextBox Width="120" Name="CurrentLiabilitiesInput"/>
                                    </StackPanel>

                                    <StackPanel Grid.Column="2" Grid.Row="2" HorizontalAlignment="Left">
                                        <TextBlock Width="120" Text="Total Liabilities"/>
                                        <TextBox Width="120" Name="TotalLiabilitiesInput"/>
                                    </StackPanel>

                                    <StackPanel Grid.Column="3" Grid.Row="2" HorizontalAlignment="Left">
                                        <TextBlock Width="120" Text="Interest Expense"/>
                                        <TextBox Width="120" Name="InterestExpenseInput"/>
                                    </StackPanel>

                                    <StackPanel Grid.Column="0" Grid.Row="3" HorizontalAlignment="Left">
                                        <TextBlock Width="120" Text="Variable Costs"/>
                                        <TextBox Width="120" Name="VariableCostsInput"/>
                                    </StackPanel>

                                    <StackPanel Grid.Column="1" Grid.Row="3" HorizontalAlignment="Left">
                                        <TextBlock Width="120" Text="Fixed Costs"/>
                                        <TextBox Width="120" Name="FixedCostsInput"/>
                                    </StackPanel>

                                    <StackPanel Grid.Column="2" Grid.Row="3" HorizontalAlignment="Left">
                                        <TextBlock Width="120" Text="Sales Revenue/unit"/>
                                        <TextBox Width="120" Name="SalesRevenuePerUnitInput"/>
                                    </StackPanel>

                                    <StackPanel Grid.Column="3" Grid.Row="3" HorizontalAlignment="Left">
                                        <TextBlock Width="120" Text="Variable Cost Per Unit"/>
                                        <TextBox Width="120" Name="VariableCostPerUnitInput"/>
                                    </StackPanel>

                                    <StackPanel Grid.Column="0" Grid.Row="4" HorizontalAlignment="Left">
                                        <Button Width="120" Margin="0,20,0,0" Content="Add Financial Data" Click="AddInputData_Click"/>
                                        <Button Width="120" Margin="0,20,0,0" Content="Clear all fields" Click="ClearInputButton_Click"/>
                                    </StackPanel>

                                    <StackPanel Grid.Row="8" Grid.ColumnSpan="4">
                                        <TextBlock Text="Imported Data" HorizontalAlignment="Center" Margin="0,20,0,10" />
                                        <DataGrid Name="ImportedDataGrid" AutoGenerateColumns="True" Height="200" Margin="5" />
                                    </StackPanel>
                                </Grid>

                                <StackPanel HorizontalAlignment="Center" Margin="0,20,0,0" Orientation="Horizontal" Height="30">
                                    <Button Content="Import Data" Click="ImportExcelButton_Click" Margin="5,0"/>
                                    <Button Content="Put data into Database" Click="AddImportedDataButton_Click" Margin="5,0"/>
                                </StackPanel>

                            </DockPanel>
                        </Grid>
                    </ScrollViewer>
                </TabItem>

                <TabItem Header="ScenarioAnalysisTab" Name="ScenarioAnalysisTab">
                    <Grid Background="White">
                        <TextBlock Text="Preview Scenario Content Here" HorizontalAlignment="Center" VerticalAlignment="Center" />
                    </Grid>
                </TabItem>
                <ToolBar x:Name="toolBar" Height="100" Width="100"/>

            </TabControl>
        </DockPanel>
    </DockPanel>
</Window>
