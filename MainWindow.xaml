                                    <Button Content="Put data into Database" Click="AddImportedDataButton_Click" Margin="5,0"/>
                                </StackPanel>

                            </DockPanel>
                        </Grid>
                    </ScrollViewer>
                </TabItem>

                <TabItem Header="ScenarioAnalysisTab" Name="ScenarioAnalysisTab">
                    <Grid Background="White">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <!-- Export Buttons -->
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="10">
                            <Button Content="Export to PDF" Name="ExportPdfButton" Margin="5"/>
                            <Button Content="Export to Excel" Name="ExportExcelButton" Margin="5"/>
                        </StackPanel>

                        <!-- Dashboards -->
                        <Grid Grid.Row="1" Margin="10">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Text="Internal data results" Grid.Row="0" Grid.Column="0" Margin="40,0,10,0"></TextBlock>
                            <TextBlock Text="External data results" Grid.Row="1" Grid.Column="0" Margin="40,0,10,0"></TextBlock>
                            <!-- Dashboard 1 -->
                            <lvc:CartesianChart Grid.Row="0" Grid.Column="0" Name="Dashboard1" Margin="5"/>
                            <!-- Dashboard 2 -->
                            <lvc:CartesianChart Grid.Row="0" Grid.Column="1" Name="Dashboard2" Margin="5"/>
                            <!-- Dashboard 3 -->
                            <lvc:CartesianChart Grid.Row="1" Grid.Column="0" Name="Dashboard3" Margin="5"/>
                            <!-- Dashboard 4 -->
                            <lvc:CartesianChart Grid.Row="1" Grid.Column="1" Name="Dashboard4" Margin="5"/>
                        </Grid>

                        <!-- Description Text Blocks -->
                        <StackPanel Grid.Row="2" Margin="10" Grid.Column="0">
                            <TextBlock Text="Description of results from the previous tab." Margin="5"/>
                            <TextBlock Text="Further insights and analysis." Margin="5"/>
                            <TextBlock Text="Additional information and conclusions." Margin="5"/>
                        </StackPanel>

                        <!-- Form for Interpretations -->
                        <StackPanel Grid.Row="1" Margin="10" Grid.Column="1">
                            <TextBlock Text="Metrics that presents risk" FontWeight="Bold" Margin="5"/>
                            <TextBlock Text="Metric 1: Detailed interpretation and analysis." Margin="5"/>
                            <TextBlock Text="Metric 2: Detailed interpretation and analysis." Margin="5"/>
                            <TextBlock Text="Metric 3: Detailed interpretation and analysis." Margin="5"/>
                            <!-- Add more TextBlocks as needed for other metrics -->
                        </StackPanel>
                    </Grid>
                </TabItem>

                <ToolBar x:Name="toolBar" Height="100" Width="100"/>

            </TabControl>
        </DockPanel>
    </DockPanel>
</Window>
