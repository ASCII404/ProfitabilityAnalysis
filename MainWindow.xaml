<Window x:Class="MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProfitabilityAnalysis"
        xmlns:lvc="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf"
        mc:Ignorable="d"
        Title="Profitabil-inatorul" Height="1080" Width="1920">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="139*" MinWidth="200"/>
            <ColumnDefinition Width="821*"/>
        </Grid.ColumnDefinitions>

        <!-- Sidebar for navigation buttons -->
        <DockPanel Grid.Column="0" Background="Gray">
            <Button Height="50" Margin="40,20,40,30" DockPanel.Dock="Bottom">HELP</Button>
            <StackPanel>
                <Button Height="50" Margin="40,40,40,0" Click="DashboardButton_Click">Dashboard</Button>
                <Button Height="50" Margin="40,40,40,0" Click="PreviewDatabaseButton_Click">Preview Database</Button>
                <Button Height="50" Margin="40,40,40,0" Click="AnalysisButton_Click">Analysis</Button>
                <Button Height="50" Margin="40,40,40,0" Click="InputDataButton_Click">Input Data</Button>
                <Button Height="50" Margin="40,40,40,0" Click="EditDataButton_Click">Edit database</Button>
                <Button Height="50" Margin="40,40,40,0" Click="ScenarioAnalysisButton_Click">Scenario Analysis</Button>
            </StackPanel>
        </DockPanel>

        <!-- Main content area with hidden TabControl headers -->
        <TabControl Grid.Column="1" Name="MainTabControl" BorderThickness="0" Height="1064" VerticalAlignment="Bottom">
            <TabControl.Template>
                <ControlTemplate TargetType="TabControl">
                    <Grid>
                        <ContentPresenter ContentSource="SelectedContent"/>
                    </Grid>
                </ControlTemplate>
            </TabControl.Template>
            <!-- Dashboard Tab -->
            <TabItem Header="Dashboard" Name="DashboardTab">
                <Grid Background="White">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Placeholder for Chart 1 -->
                    <lvc:CartesianChart Grid.Row="0" Grid.Column="0" Name="chart1" Visibility="Collapsed"/>
                    <Grid Grid.Row="0" Grid.Column="0" Name="placeholder1">
                        <Rectangle Fill="LightGray" RadiusX="10" RadiusY="10" Margin="37,46,37,46"/>
                        <TextBlock Text="Data is not loaded" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="DarkGray"/>
                        <Rectangle Fill="LightGray" RadiusX="10" RadiusY="10" Margin="871,46,-797,46"/>
                        <Rectangle Fill="LightGray" RadiusX="10" RadiusY="10" Margin="37,582,37,-490"/>
                        <Rectangle Fill="LightGray" RadiusX="10" RadiusY="10" Margin="871,582,-797,-490"/>
                    </Grid>

                    <!-- Placeholder for Chart 2 -->
                    <lvc:CartesianChart Grid.Row="0" Grid.Column="1" Name="chart2" Visibility="Collapsed"/>
                    <Grid Grid.Row="0" Grid.Column="1" Name="placeholder2">
                        <TextBlock Text="Data is not loaded" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="DarkGray"/>
                    </Grid>

                    <!-- Placeholder for Chart 3 -->
                    <lvc:CartesianChart Grid.Row="1" Grid.Column="0" Name="chart3" Visibility="Collapsed"/>
                    <Grid Grid.Row="1" Grid.Column="0" Name="placeholder3">
                        <TextBlock Text="Data is not loaded" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="DarkGray"/>
                    </Grid>

                    <!-- Placeholder for Chart 4 -->
                    <lvc:CartesianChart Grid.Row="1" Grid.Column="1" Name="chart4" Visibility="Collapsed"/>
                    <Grid Grid.Row="1" Grid.Column="1" Name="placeholder4">
                        <TextBlock Text="Data is not loaded" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="DarkGray"/>
                    </Grid>

                </Grid>
            </TabItem>

            <!-- Preview Database Tab -->
            <TabItem Header="Preview Database" Name="PreviewDatabaseTab">
                <Grid Background="Green">
                    <StackPanel>
                        <Button>Preview</Button>
                        <DataGrid Name="FinancialDataGrid" AutoGenerateColumns="True" />
                    </StackPanel>
                </Grid>
            </TabItem>

            <TabItem Header="AnalysisTab" Name="AnalysisTab">
                <Grid Background="White">
                    <TextBlock Text="Preview Analysis Content Here" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                </Grid>
            </TabItem>

            <TabItem Header="InputData" Name="InputDataTab">
                <Grid>
                    <DockPanel>
                        <StackPanel Margin="10" DockPanel.Dock="Top">
                            <TextBlock Text="Date" />
                            <DatePicker Name="DateInput" />

                            <TextBlock Text="Revenue" />
                            <TextBox Name="RevenueInput" />

                            <TextBlock Text="Cost of Goods Sold" />
                            <TextBox Name="CostOfGoodsSoldInput" />

                            <TextBlock Text="Operating Expenses" />
                            <TextBox Name="OperatingExpensesInput" />

                            <TextBlock Text="Net Income" />
                            <TextBox Name="NetIncomeInput" />

                            <TextBlock Text="Total Assets" />
                            <TextBox Name="TotalAssetsInput" />

                            <TextBlock Text="Shareholders' Equity" />
                            <TextBox Name="TotalEquityInput" />

                            <TextBlock Text="EBITDA" />
                            <TextBox Name="EBITDAInput" />

                            <TextBlock Text="Current Assets" />
                            <TextBox Name="CurrentAssetsInput" />

                            <TextBlock Text="Current Liabilities" />
                            <TextBox Name="CurrentLiabilitiesInput" />

                            <TextBlock Text="Total Liabilities" />
                            <TextBox Name="TotalLiabilitiesInput" />

                            <TextBlock Text="Interest Expense" />
                            <TextBox Name="InterestExpenseInput" />

                            <TextBlock Text="Variable Costs" />
                            <TextBox Name="VariableCostsInput" />

                            <TextBlock Text="Fixed Costs" />
                            <TextBox Name="FixedCostsInput" />

                            <TextBlock Text="Sales Revenue Per Unit" />
                            <TextBox Name="SalesRevenuePerUnitInput" />

                            <TextBlock Text="Variable Cost Per Unit" />
                            <TextBox Name="VariableCostPerUnitInput" />

                            <Button Content="Add Financial Data" Click="InputDataButton_Click" />
                        </StackPanel>
                    </DockPanel>

                </Grid>
            </TabItem>

            <TabItem Header="EditDataTab" Name="EditDataTab">
                <Grid Background="White">
                    <StackPanel Margin="10">
                        <!-- Input field for FinancialDataID -->
                        <TextBlock Text="Enter FinancialDataID to delete:" />
                        <TextBox Name="FinancialDataIDInput" Width="200" Margin="0,10,0,10" />

                        <!-- Delete button -->
                        <Button Content="Delete Financial Data" Click="EditDataButton_Click" Width="200" />

                        <!-- Other UI elements can go here -->
                    </StackPanel>
                </Grid>
            </TabItem>

            <TabItem Header="ScenarioAnalysisTab" Name="ScenarioAnalysisTab">
                    
                <Grid Background="White">
                    <TextBlock Text="Preview Scenario Content Here" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                </Grid>
            </TabItem>

        </TabControl>
    </Grid>
</Window>
